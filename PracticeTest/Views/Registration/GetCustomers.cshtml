@model IEnumerable<PracticeTest.Models.CustomerRegistration>

<p>
    <a asp-action="Index" class="btn btn-primary">Create New</a>
    @* <button type="button" class="btn btn-dark">Dark</button>*@
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    <a href="@Url.Action("GetById", "Registration", new { id = item.Id })" class="btn btn-success">
                        <span class="glyphicon glyphicon-edit"></span> Edit
                    </a>
                    <a href="@Url.Action("DeleteById", "Registration", new { id = item.Id })" class="btn btn-danger">
                        <span class="glyphicon glyphicon-edit"></span> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
