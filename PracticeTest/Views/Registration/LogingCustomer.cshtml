@model CustomerRegistration

<form method="post" action="/Registration/LoginCustomer" id="loginForm">
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control custom-width" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label"></label>
        <input asp-for="Password" type="password" class="form-control custom-width" required />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <br />

    <div class="form-group">
        <input type="submit" value="Login" class="btn btn-primary" />
        <a href="@Url.Action("Index", "Registration",  null)" class="btn btn-danger">
            <span class="glyphicon glyphicon-edit"></span> Go To Registration
        </a>
    </div>
</form>
